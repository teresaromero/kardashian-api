{
    "swagger": "2.0",
    "info": {
        "title": "Kardashian API",
        "description": "This is the description of the API",
        "version": "1.0",
        "contact": {
            "name": "Teresa Romero",
            "url": "https://github.com/teresaromero"
        },
        "license": {
            "name": "MIT"
        }
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "schemes": [
        "http"
    ],
    "tags": [
        {
            "name": "collections",
            "description": "Access to raw-collections available in database"
        },
        {
            "name": "episodes",
            "description": "Access to episode information"
        },
        {
            "name": "seasons",
            "description": "Access to seasons information"
        },
        {
            "name": "cast",
            "description": "Access to cast information"
        }
    ],
    "paths": {
        "/episodes": {
            "get": {
                "tags": [
                    "episodes"
                ],
                "description": "List of available episodes, sorted by overall episode number",
                "responses": {
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/episodes/:episode": {
            "get": {
                "tags": [
                    "episodes"
                ],
                "description": "Information about the episode",
                "parameters": [
                    {
                        "name": "episode",
                        "in": "path",
                        "required": true,
                        "type": "integer",
                        "description": "overall episode number"
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/collections": {
            "get": {
                "tags": [
                    "collections"
                ],
                "description": "Available collections",
                "responses": {
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/collections/:collection": {
            "get": {
                "tags": [
                    "collections"
                ],
                "description": "",
                "parameters": [
                    {
                        "name": "collection",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "collection to fetch"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    },
    "definitions": {
        "Error": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "integer",
                    "enum": [
                        400,
                        404,
                        500
                    ]
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}